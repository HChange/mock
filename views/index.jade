extends layout

block content
  h1.hidden= title
  img(class="logo" src="https://static.hellochange.cn/logo/logo.svg")
  //- p.desc Mock数据生成接口
  div.split
  h2 协议
  div.cg-table
    table
      tr
        th 协议
        th 地址
        th 入参
        th 示例
      tr
        td GET
        td /get
        td ?tempalte=encodeURIComponent(JSON.stringify(
          a(href="http://mockjs.com/examples.html#Basic" target="_blank") mock规则
          ))
        td fetch(`/get?tempalte=${encodeURIComponent(JSON.stringify({name:'@cname'}))}`,{
          p.indent method="GET",
          p })
      tr
        td POST
        td /get
        td {template:
          a(href="http://mockjs.com/examples.html#Basic" target="_blank") mock规则
          | }
        td fetch('/get', {
          p.indent method: 'POST',
          p.indent headers: {'Content-type': 'application/json; charset=UTF-8'},
          p.indent body: JSON.stringify({ template: { name: '@cname' }}),
          p })
